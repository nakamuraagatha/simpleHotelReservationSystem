<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Room Number</th>
      <th>Lodge</th>
      <th>Room Type</th>
      <th>Allowed Room Occupant</th>
      <th>Allowed Room Extra Occupant</th>
      <th>Room Extra Bed Charge</th>
      <th>Room Rate</th>
      <th>Room Extra Person Charge</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
     
      <tr>
        <td><%= room.room_number %></td>
        <td><%= room.lodge.name %></td>
        <td><%= room.room_type.room_type %></td>
        <td><%= room.room_occupants %></td>
        <td><%= room.room_extra_occupants %></td>
        <td><i class="fa fa-inr"></i> <%= room.room_extra_bed_charge %></td>
        <td><i class="fa fa-inr"></i> <%= room.room_rate %></td>
        <td><i class="fa fa-inr"></i> <%= room.room_extra_person_charge %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

