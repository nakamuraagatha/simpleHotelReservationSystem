<p id="notice"><%= notice %></p>

<h1>Listing Room Types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Room Type</th>
      <th>Hotel Name</th>
      <th>No of rooms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_types.each do |room_type| %>
      <tr>
        <td><%= room_type.room_type %></td>
        <td><%= room_type.lodge.name %></td>
        <td><%= room_type.total_rooms %></td>
        <td><%= link_to 'Show', room_type %></td>
        <td><%= link_to 'Edit', edit_room_type_path(room_type) %></td>
        <td><%= link_to 'Destroy', room_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

